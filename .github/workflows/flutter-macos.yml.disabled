name: Flutter macOS Build

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: macos-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.24.0'
          channel: 'stable'

      - name: Enable macOS desktop
        working-directory: flutter-app
        run: flutter config --enable-macos-desktop

      - name: Install dependencies
        working-directory: flutter-app
        run: flutter pub get

      - name: Build macOS app
        working-directory: flutter-app
        run: flutter build macos --release

      - name: Create DMG
        working-directory: flutter-app
        run: |
          brew install create-dmg
          create-dmg \
            --volname "SwiftChat" \
            --window-pos 200 120 \
            --window-size 800 400 \
            --icon-size 100 \
            --app-drop-link 600 185 \
            "SwiftChat.dmg" \
            "build/macos/Build/Products/Release/swift_chat.app"

